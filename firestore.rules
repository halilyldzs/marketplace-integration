rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Kullanıcılar koleksiyonu için kurallar
    match /users/{userId} {
      allow read, write: if true;
    }

    // Kategoriler koleksiyonu için kurallar
    match /categories/{categoryId} {
      allow read, write: if true;
    }
  }
} 